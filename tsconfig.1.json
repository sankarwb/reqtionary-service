{
  "files": [
    "server.ts"
  ],
  "include": [
    "app/**/*.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es5",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": [ "node_modules/@types" ],
    "paths": {
      "*": [
        "node_modules/@types/*",
        "./app/types/*"
      ]
    }
  }
}